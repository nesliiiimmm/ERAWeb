@section Scripts{ 
    <script>
        var sayacDef = 10;
        var sayac = sayacDef;

        var basladi = false;
        var aramaQuery = "";
        $("#aramaBox").keyup(function () {
            var a = $(this).val();
            aramaQuery = "/Document/UrunArama?arama=" + a;

            if (sayac == sayacDef)
                say();
            sayac = sayacDef;
        });
        function say() {
            sayac--;
            if (sayac <= 0) {

                sayac = sayacDef;
                $.ajax({
                    url: aramaQuery,
                    type: "GET",
                    success: function (res) {
                        var sonucDiv = $(".aramaSonuc");
                        sonucDiv.html(res);
                    }
                });
            }
            else {
                setTimeout(function () {
                    say();
                }, 100);
            }
        }


    </script>
}