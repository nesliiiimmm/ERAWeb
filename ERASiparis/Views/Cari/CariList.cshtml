@{
    ViewBag.Title = "Cari";
}

@model List<CARIKART>

<div class="row">
    <div class="col-lg-12 col-xxl-12">
        <div class="card card-custom card-stretch gutter-b">
            <div class="card-header border-0 py-5">
                <h3 class="card-title align-items-start flex-column">
                    <span class="card-label font-weight-bolder text-dark">Siparis</span>
                    <span class="text-muted mt-3 font-weight-bold font-size-sm"></span>
                </h3>
            </div>
            <div class="card-body py-0" style="max-height:500px;overflow:scroll">
                <div class="table-responsive">
                    <table class="table table-head-custom table-vertical-center" id="kt_advance_table_widget_1">
                        <thead>
                            <tr class="text-left">
                                <th style="min-width: 40px">SUBEKODU</th>
                                <th style="min-width: 80px">Firma Adi</th>
                                <th style="min-width: 40px">IL</th>
                                <th style="min-width: 40px">ILCE</th>
                                <th class="pl-0 text-right" style="min-width: 60px">Tel</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                foreach (var item in Model)
                                {
                                    <tr class="satir">
                                        <td class="pl-0">@item.SUBEKODU</td>
                                        <td class="text-dark-75 font-weight-bolder text-hover-primary mb-1 font-size-lg"> @item.FIRMAADI </td>
                                        <td class="pl-0">@item.IL</td>
                                        <td class="pl-0">@item.ILCE</td>
                                        <td class="pl-0 text-righ">@item.TEL1</td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>