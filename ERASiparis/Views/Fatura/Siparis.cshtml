
@{
    ViewBag.Title = "Siparis";
}

@model List<STOKUSTVIEW>

@{
    void yaz(decimal? v)
    {
        if (v.HasValue)
        {
            Write(v.Value.ToString("N2").Replace(",", "."));
        }
        else
        {
            Write("0.00");
        }
    }
}
